// Настраивает доступность редактирования схемы в карточке процесса.
//
// Параметры:
//  Форма - ФормаКлиентскогоПриложения - карточка комплексного процесса.
//
&НаКлиентеНаСервереБезКонтекста
Процедура НастроитьДоступностьРедактированияСхемы(Форма)
	
	Если Не РаботаСКомплекснымиБизнесПроцессамиКлиентСервер.ЭтоФормаПроцессаСоСхемой(Форма) Тогда
		Возврат;
	КонецЕсли;
	
	СхемаДоступнаДляРедактирования = Не Форма.ТолькоПросмотр;
	
	Если СхемаДоступнаДляРедактирования Тогда
		
		Если Форма.Объект.Стартован
			И Форма.Объект.Состояние = 
				ПредопределенноеЗначение("Перечисление.СостоянияБизнесПроцессов.Активен") Тогда
			
			СхемаДоступнаДляРедактирования = Ложь
		ИначеЕсли СхемыПроцессовКлиентСервер.СхемаПроцессаНастроена(Форма) 
			И ЗначениеЗаполнено(Форма.Объект.Шаблон) Тогда
			
			СхемаДоступнаДляРедактирования = Форма.ДоступностьПоШаблону;
		КонецЕсли;
		
	КонецЕсли;
	
	Форма.Элементы.ПроверитьСхемуИНастройки.Доступность = СхемаДоступнаДляРедактирования;
	Форма.Элементы.РассчитатьТочныеСрокиПоСхеме.Доступность = СхемаДоступнаДляРедактирования;
	
#Если ВебКлиент Тогда
	// В веб-клиенте схема не доступна для редактирования.
	Форма.Элементы.Схема.ТолькоПросмотр = Истина;
#Иначе	
	Форма.Элементы.Схема.ТолькоПросмотр = Не СхемаДоступнаДляРедактирования;
	Форма.Схема.ИспользоватьСетку = СхемаДоступнаДляРедактирования;
#КонецЕсли
	
КонецПроцедуры

// Нормализует предметы задач по данным схемы в форме.
//
&НаКлиенте
Процедура НормализоватьПредметыЗадачПоДаннымСхемы()
		
	ВсеПараметрыЭлементов =
		РаботаСКомплекснымиБизнесПроцессамиКлиентСервер.ВсеПараметрыЭлементовВСхеме(ЭтотОбъект);
	
	ИдентификаторыНастроек = Новый Соответствие();
	Для Каждого ПараметрыЭлемента Из ВсеПараметрыЭлементов Цикл
		ИдентификаторыНастроек[ПараметрыЭлемента.Значение.Идентификатор] = Истина;
	КонецЦикла;
	
	Индекс = Объект.ПредметыЗадач.Количество() - 1;
	Пока Индекс >= 0 Цикл
		СтрокаПредмета = Объект.ПредметыЗадач[Индекс];
		Если ЗначениеЗаполнено(СтрокаПредмета.ШаблонБизнесПроцесса)
			И ИдентификаторыНастроек[СтрокаПредмета.ИдентификаторЭтапа] = Неопределено Тогда
			
			Объект.ПредметыЗадач.Удалить(СтрокаПредмета);
		КонецЕсли;
		Индекс = Индекс - 1; 		
	КонецЦикла;
			
КонецПроцедуры

// Обновляет доступность команд в контекстном меню схемы.
//
&НаКлиенте
Процедура ОбновитьДоступностьКомандНастройкиЭлементовСхемыПроцессов()
	
	Если Не РаботаСКомплекснымиБизнесПроцессамиКлиентСервер.ЭтоФормаПроцессаСоСхемой(
		ЭтотОбъект) Тогда
		
		Возврат;
	КонецЕсли;
	
	Элементы.ОткрытьПроцессДействияСхемы.Доступность = Ложь;
	Элементы.ОткрытьШаблонДействияСхемы.Доступность = Ложь;
	Элементы.ПрерватьДействиеСхемы.Доступность = Ложь;
	Элементы.ПрерватьДействиеСхемы.Пометка = Ложь;
	Элементы.ТекущаяПозицияСхемы.Доступность = Ложь;
	Элементы.ТекущаяПозицияСхемы.Пометка = Ложь;
	
	Элементы.ОткрытьШаблонДействияСхемы.Доступность = Истина;
	
	ИмяЭлементаСхемы =
		СхемыПроцессовКлиентСервер.ИмяТекущегоЭлементаСхемыПоЕеДаннымВФорме(ЭтотОбъект);
		
	Если Не ЗначениеЗаполнено(ИмяЭлементаСхемы) Тогда
		Возврат;
	КонецЕсли;
	
	СхемаДоступнаДляРедактирования = Не ТолькоПросмотр;
	
	Если СхемаДоступнаДляРедактирования Тогда
		
		Если Объект.Стартован
			И Объект.Состояние = 
				ПредопределенноеЗначение("Перечисление.СостоянияБизнесПроцессов.Активен") Тогда
			
			СхемаДоступнаДляРедактирования = Ложь;
		ИначеЕсли СхемыПроцессовКлиентСервер.СхемаПроцессаНастроена(ЭтотОбъект) Тогда
			
			СхемаДоступнаДляРедактирования = ДоступностьПоШаблону;
		КонецЕсли;
		
	КонецЕсли;
	
	ТипЭлементаСхемы = СхемыПроцессовКлиентСервер.ТипЭлементаСхемыПоДаннымСхемыВФорме(
		ИмяЭлементаСхемы, ЭтотОбъект);
		
	ПоказатьКомандыОткрытияКарточкиДействия = Ложь;
	ПоказатьКомандуПрерывания = Ложь;
	
	ПроцессЭлемента = Неопределено;
	
	Если СхемыПроцессовКлиентСервер.ЭтоДействиеСхемы(ТипЭлементаСхемы)
		Или СхемыПроцессовКлиентСервер.ЭтоВложенныйПроцессСхемы(ТипЭлементаСхемы) Тогда
		
		НастройкаЭлемента =
			РаботаСКомплекснымиБизнесПроцессамиКлиентСервер.НастройкаЭлементаСхемыВФорме(
			ЭтотОбъект, ИмяЭлементаСхемы);
			
		ПроцессЭлемента =
			РаботаСКомплекснымиБизнесПроцессамиКлиентСервер.ПроцессЭлементаСхемыВФорме(
			ИмяЭлементаСхемы, ЭтотОбъект);
		
		Если ЗначениеЗаполнено(НастройкаЭлемента)
			И ЗначениеЗаполнено(ПроцессЭлемента) Тогда
				
			ПоказатьКомандыОткрытияКарточкиДействия = Истина;
			
			ДанныеПроцесса = 
				РаботаСКомплекснымиБизнесПроцессамиКлиентСервер.ДанныеДействияВФорме(
				ЭтотОбъект, ПроцессЭлемента);
			
			Если Не ДанныеПроцесса.ПроцессЗавершен
				
				И ДанныеПроцесса.СостояниеПроцесса <> 
				ПредопределенноеЗначение("Перечисление.СостоянияБизнесПроцессов.Прерван") Тогда
				
				ПоказатьКомандуПрерывания = Истина;
			КонецЕсли; 
						
		КонецЕсли;
		
	КонецЕсли;
	
	Если ПоказатьКомандыОткрытияКарточкиДействия Тогда
		Элементы.ОткрытьПроцессДействияСхемы.Доступность = Истина;
		Элементы.ОткрытьШаблонДействияСхемы.Доступность = Истина;
	КонецЕсли;
	
	Если ПоказатьКомандуПрерывания Тогда
		Элементы.ПрерватьДействиеСхемы.Доступность = Истина;
		Элементы.ПрерватьДействиеСхемы.Пометка = РаботаСКомплекснымиБизнесПроцессамиКлиентСервер.
			ПроцессЭлементаОтмеченКПрерываниюВФорме(ЭтотОбъект, ПроцессЭлемента);
	КонецЕсли;
	
	Элементы.ТекущаяПозицияСхемы.Доступность = Истина;
	Элементы.ТекущаяПозицияСхемы.Пометка =
		РаботаСКомплекснымиБизнесПроцессамиКлиентСервер.ОтметкаТекущийДляЭлементаСхемыВФорме(
		ИмяЭлементаСхемы, ЭтотОбъект);
	
	Если ПоказатьКомандуПрерывания Тогда
		Элементы.ТекущаяПозицияСхемы.Доступность = Элементы.ПрерватьДействиеСхемы.Пометка;
	Иначе
		Элементы.ТекущаяПозицияСхемы.Доступность = Истина;
	КонецЕсли;
	
	НастройкаЭлемента = ДанныеПараметровСхемы.НастройкиЭлементов[ИмяЭлементаСхемы];
	Если ЗначениеЗаполнено(НастройкаЭлемента) И ТипЗнч(НастройкаЭлемента) = Тип("СправочникСсылка.ИменаПредметов") Тогда
		
		ПараметрыОтбора = Новый Структура("ИмяПредмета", НастройкаЭлемента);
		СтрНайти = Объект.Предметы.НайтиСтроки(ПараметрыОтбора);
		Если СтрНайти.Количество() <> 0 Тогда
			
			Элементы.ОткрытьШаблонДействияСхемы.Доступность = Ложь;
			
		КонецЕсли;	
		
	КонецЕсли;		
	
	Если Не СхемаДоступнаДляРедактирования Тогда
		Элементы.ПрерватьДействиеСхемы.Доступность = Ложь;
		Элементы.ТекущаяПозицияСхемы.Доступность = Ложь;
	КонецЕсли;	
	
КонецПроцедуры

&НаСервере
Процедура ПрочитатьСхемуВФорму()
 	
 	РаботаСКомплекснымиБизнесПроцессамиСервер.ПрочитатьСхемуВФорму(ЭтотОбъект, Объект);
	 	
	// Настроим доступность редактирование схемы при чтении на сервере, т.к. форма процесса
	// может быть перечитана с изменением параметров влияющих на доступность.

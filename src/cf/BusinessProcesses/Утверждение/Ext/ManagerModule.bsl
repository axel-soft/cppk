	Комментарий = "";
	
	Если ТочкаМаршрута = ТочкиМаршрута.Утвердить Тогда
		Если ВариантВыполнения Тогда
			Комментарий = НСтр("ru = 'Утверждено автоматически'");
		Иначе
			Комментарий = НСтр("ru = 'Не утверждено автоматически'");
		КонецЕсли;
	ИначеЕсли ТочкаМаршрута = ТочкиМаршрута.Ознакомиться Тогда
		Комментарий = НСтр("ru = 'Ознакомился автоматически'");
	КонецЕсли;
	
	Возврат Комментарий;
	

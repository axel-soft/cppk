// Возвращает параметры для варианта создания поручения на основании объекта.
//
// Параметры:
//  Вариант - Строка.
//  Помощник - см. Помощник()
//
// Возвращаемое значение:
//  Структура:
//   * Объекты - Массив - объекты для отправки в работу.
//
Функция ПараметрыВариантаСозданияПоручения(Вариант, Помощник) Экспорт
	
	Параметры = Новый Структура;
	Если Помощник.ОбъектыОтправки.Количество() = 1
		И (ТипЗнч(Помощник.ОбъектыОтправки[0]) = Тип("СправочникСсылка.ГруппировкиЗадач")
			Или ТипЗнч(Помощник.ОбъектыОтправки[0]) = Тип("ДокументСсылка.Задача")
			Или ТипЗнч(Помощник.ОбъектыОтправки[0]) = Тип("ДокументСсылка.ДействиеЗадачи")) Тогда
		Параметры.Вставить("Основание", Помощник.ОбъектыОтправки[0]);
	Иначе
		Параметры.Вставить("Приложения", Помощник.ОбъектыОтправки);
	КонецЕсли;
	Параметры.Вставить("ВидЗадачи", ПредопределенноеЗначение("Справочник.ВидыЗадач.Поручение"));
	
	Возврат Параметры;
	
КонецФункции

// Возвращает параметры для варианта создания ознакомления на основании объекта.
//
// Параметры:
//  Вариант - Строка.
//  Помощник - см. ПомощникОтправить.Помощник.
//
// Возвращаемое значение:
//  Структура:
//   * Приложения - Массив из ОпределяемыйТип.ПриложениеЗадач.
//   * ВидЗадачи - СправочникСсылка.ВидыЗадач.
//   * Заголовок - Строка.
//
Функция ПараметрыВариантаСозданияОзнакомления(Вариант, Помощник) Экспорт
	
	Параметры = Новый Структура;
	Если Помощник.ОбъектыОтправки.Количество() = 1
		И (ТипЗнч(Помощник.ОбъектыОтправки[0]) = Тип("СправочникСсылка.ГруппировкиЗадач")
			Или ТипЗнч(Помощник.ОбъектыОтправки[0]) = Тип("ДокументСсылка.Задача")
			Или ТипЗнч(Помощник.ОбъектыОтправки[0]) = Тип("ДокументСсылка.ДействиеЗадачи")) Тогда
		Параметры.Вставить("Основание", Помощник.ОбъектыОтправки[0]);
		ЕстьПриложения = Ложь;
	Иначе
		Параметры.Вставить("Приложения", Помощник.ОбъектыОтправки);
		ЕстьПриложения = Истина;
	КонецЕсли;
	Параметры.Вставить("ВидЗадачи", ПредопределенноеЗначение("Справочник.ВидыЗадач.Ознакомление"));
	
	Если ЕстьПриложения И Помощник.ОбъектыОтправки.Количество() = 1 Тогда
		
		Заголовок = СтрШаблон(НСтр("ru = 'Ознакомиться ""%1""'"), Строка(Помощник.ОбъектыОтправки[0]));
		
	ИначеЕсли ЕстьПриложения И Помощник.ОбъектыОтправки.Количество() > 1 Тогда
		
		Заголовок = СтрШаблон(НСтр("ru = 'Ознакомиться с приложениями (%1)'"), Помощник.ОбъектыОтправки.Количество());
		
	Иначе
		
		Заголовок = НСтр("ru = 'Ознакомиться'");
		
	КонецЕсли;
	
	Параметры.Вставить("Заголовок", Заголовок);
	
	Возврат Параметры;
	
КонецФункции


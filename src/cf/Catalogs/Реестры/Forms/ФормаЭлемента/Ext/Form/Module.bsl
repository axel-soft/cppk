		Объект.ВидыЭлементовРеестра,
		"ВидЭлементовРеестра");
	ОбщегоНазначенияДокументооборотКлиент.УдалитьДублиСтрокТаблицы(
		Объект.ВидыЭлементовРеестра,
		"ВидЭлементовРеестра");
	ОбщегоНазначенияДокументооборотКлиент.УдалитьПустыеСтрокиТаблицы(
		Объект.Доступ,
		"Контейнер");
	ОбщегоНазначенияДокументооборотКлиент.УдалитьДублиСтрокТаблицы(
		Объект.Доступ,
		"Контейнер");
	
	ОбновитьКоличествоНаКлиенте();
	
КонецПроцедуры


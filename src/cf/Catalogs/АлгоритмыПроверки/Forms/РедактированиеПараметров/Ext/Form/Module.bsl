#Область ОбработчикиКомандФормы

&НаКлиенте
Процедура Готово(Команда)
	
	Проверка = Новый Структура;
	Результат = Новый Массив;
	Для Каждого Параметр Из ТаблицаПараметров Цикл
		Если Не ЗначениеЗаполнено(Параметр.Имя) Тогда
			ПоказатьПредупреждение(, НСтр("ru = 'Укажите имя параметра.'"));
			Возврат;
		КонецЕсли;
		Попытка
			Проверка.Вставить(Параметр.Имя);
		Исключение
			ПоказатьПредупреждение(, СтрШаблон(НСтр("ru = 'Недопустимое имя параметра: %1'"), Параметр.Имя));
			Возврат;
		КонецПопытки;
		Результат.Добавить(Новый Структура("Имя, Значение",
			Параметр.Имя, Параметр.Значение));
	КонецЦикла;
	
	Закрыть(Результат);
	
КонецПроцедуры

#КонецОбласти 

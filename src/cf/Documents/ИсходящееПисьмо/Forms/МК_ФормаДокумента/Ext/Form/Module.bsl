	Параметры.РежимПолученияДанныхВыбора = РежимПолученияДанныхВыбораПриВводеПоСтроке.Фоновый;

	Если Элемент = Элементы.ПолучателиКопийМножественныйВвод Тогда
		ТаблАдресатов = ПолучателиКопийМножественныйВвод;
	ИначеЕсли Элемент = Элементы.ПолучателиСкрытойКопииМножественныйВвод Тогда
		ТаблАдресатов = ПолучателиСкрытойКопииМножественныйВвод;
	ИначеЕсли Элемент = Элементы.ПолучателиОтветаМножественныйВвод Тогда
		ТаблАдресатов = ПолучателиОтветаМножественныйВвод;
	Иначе
		ТаблАдресатов = ПолучателиПисьмаМножественныйВвод;
	КонецЕсли;
	
	ИспользованныеАдресаты = Новый Массив;
	Для каждого Стр из ТаблАдресатов Цикл
		ИспользованныеАдресаты.Добавить(Стр.Контакт);
	КонецЦикла;
	
	Если ПустаяСтрока(Текст) Тогда
		
		ДанныеВыбора = Новый СписокЗначений;
		
		Для Каждого Строка Из ПолучателиПредставлениеСписокВыбора Цикл
			Если ИспользованныеАдресаты.Найти(Строка.Значение.Контакт) = Неопределено Тогда
				ДанныеВыбора.Добавить(Строка.Значение, Строка.Представление, Строка.Пометка, Строка.Картинка);
			КонецЕсли;
			Если ДанныеВыбора.Количество() >= 5 Тогда
				Прервать;
			КонецЕсли;
		КонецЦикла;	
		
		Если ДанныеВыбора.Количество() <> 0 Тогда
			СтандартнаяОбработка = Ложь;
		КонецЕсли;
		
		Возврат;
		
	КонецЕсли;
	
	Если СтрДлина(Текст) = 1 Тогда
		Возврат;
	КонецЕсли;
	
	ТекстДляПолученияДанныхВыбора = Текст;
	
	Если ПустаяСтрока(ТекстДляПолученияДанныхВыбора) Тогда
		СтандартнаяОбработка = Ложь;
		Возврат;
	Иначе
		Текст = ТекстДляПолученияДанныхВыбора;
	КонецЕсли;
	
	ДанныеВыбора = ВстроеннаяПочтаСервер.ПолучитьДанныеВыбораДляЭлектронногоПисьма(Текст,
		ТекущийПользователь,
		Ложь,
		Истина);

	Если ТипЗнч(ДанныеВыбора) = Тип("СписокЗначений") Тогда
		ВстроеннаяПочтаКлиент.ЗаполнитьКартинкиВСпискеВыбора(ДанныеВыбора);
		Если ДанныеВыбора.Количество() <> 0 Тогда
			СтандартнаяОбработка = Ложь;
		КонецЕсли;
	КонецЕсли;

КонецПроцедуры

&НаКлиенте
Процедура Множ_ПолучателиОкончаниеВводаТекста(Элемент, Текст, ДанныеВыбора, СтандартнаяОбработка)
	
	Если СтрДлина(Текст) < 2 Тогда
		Возврат;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(Текст) Тогда
		
		РезультатВыбораЗначение = Неопределено;
		
		АдресИнфо = РаботаСоСтроками.РазложитьПредставлениеАдресаЭлектроннойПочты(Текст);
		Если Не ПустаяСтрока(АдресИнфо.Адрес) Тогда
			
			РезультатВыбораЗначение =
				ВстроеннаяПочтаСервер.ПолучитьПараметрыАдресатаПоАдресуИПредставлению(
				АдресИнфо.Адрес,
				АдресИнфо.ОтображаемоеИмя);
			
		Иначе
			
			РезультатВыбора = Неопределено;
			
			ДанныеВыбора = ВстроеннаяПочтаСервер.ПолучитьДанныеВыбораДляЭлектронногоПисьма(Текст,
				ТекущийПользователь,
				Ложь);
				
			Если ТипЗнч(ДанныеВыбора) = Тип("СписокЗначений") Тогда
				ВстроеннаяПочтаКлиент.ЗаполнитьКартинкиВСпискеВыбора(ДанныеВыбора);
					
				Если ДанныеВыбора.Количество() = 1 Тогда
					
					РезультатВыбора = ДанныеВыбора[0];
					
				ИначеЕсли ДанныеВыбора.Количество() > 1 Тогда
					
					СтандартнаяОбработка = Ложь;
					
					Возврат;
					
				КонецЕсли;
			КонецЕсли;
			
			Если РезультатВыбора <> Неопределено Тогда
				РезультатВыбораЗначение = РезультатВыбора.Значение;
			КонецЕсли;
		КонецЕсли;

		Если РезультатВыбораЗначение <> Неопределено Тогда
			
			ТипПолучателя = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.Копия");
			
			Если Элемент.Имя = "ПолучателиПисьмаМножественныйВвод" Тогда
				ТипПолучателя = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.Кому");
			ИначеЕсли Элемент.Имя = "ПолучателиКопийМножественныйВвод" Тогда
				ТипПолучателя = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.Копия");
			ИначеЕсли Элемент.Имя = "ПолучателиСкрытойКопииМножественныйВвод" Тогда
				ТипПолучателя = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.СкрытаяКопия");
			ИначеЕсли Элемент.Имя = "ПолучателиОтветаМножественныйВвод" Тогда
				ТипПолучателя = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.ОбратныйАдрес");
			КонецЕсли;
			
			ТаблицаАдресов = Множ_ПолучитьТаблицуАдресатовПоТипу(ТипПолучателя);
			Множ_ДобавитьНовыйКонтакт(ТаблицаАдресов, РезультатВыбораЗначение);
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура Множ_ЗавершениеВыбораПолучателяИзСписка(РезультатВыбора, Параметры) Экспорт

	Если РезультатВыбора <> Неопределено Тогда
		
		ТаблицаАдресатов = Множ_ПолучитьТаблицуАдресатовПоЭлементу(Параметры.Элемент);
		СтрокаДанных = ТаблицаАдресатов.Добавить();
		ВсегоАдресатов = ТаблицаАдресатов.Количество();
		
		СтрокаДанных.Контакт = РезультатВыбора.Значение.Контакт;
		СтрокаДанных.Адресат = РезультатВыбора.Значение.Адресат;
		НовыйТекст = ВстроеннаяПочтаСервер.ПолучитьПредставлениеИКонтактАдресата(СтрокаДанных.Адресат).Представление;
		СтрокаДанных.Представление = НовыйТекст;
		СтрокаДанных.Адрес = РезультатВыбора.Значение.Адрес;
		СтрокаДанных.Внешний = РезультатВыбора.Значение.Внешний; 
		
		Множ_ОбновитьНомерКартинкиАдресата(СтрокаДанных, ВсегоАдресатов);

		Модифицированность = Истина;
		
		Возврат;
	КонецЕсли;
	
	ТаблицаАдресатов = Множ_ПолучитьТаблицуАдресатовПоЭлементу(Параметры.Элемент);
	ВсегоАдресатов = ТаблицаАдресатов.Количество();
	
	Множ_ПродолжитьПолучателиПредставлениеОкончаниеВводаТекста(Параметры.НовыйТекст, Параметры.СтрокаДанных, ВсегоАдресатов);
	
КонецПроцедуры	
	
&НаКлиенте
Процедура Множ_ПродолжитьПолучателиПредставлениеОкончаниеВводаТекста(НовыйТекст, СтрокаДанных, ВсегоАдресатов)	
	
	АдресИнфо = РаботаСоСтроками.РазложитьПредставлениеАдресаЭлектроннойПочты(НовыйТекст);
	
	Если ЗначениеЗаполнено(АдресИнфо.Адрес) Тогда
		ИмяАдресата = ?(ЗначениеЗаполнено(АдресИнфо.ОтображаемоеИмя), АдресИнфо.ОтображаемоеИмя, АдресИнфо.Адрес);
		СтрокаДанных.Адресат = ВстроеннаяПочтаСерверПовтИсп.ПолучитьПочтовогоАдресата(АдресИнфо.Адрес, ИмяАдресата);
		ПредставлениеАдресата = ВстроеннаяПочтаСервер.ПолучитьПредставлениеИКонтактАдресата(СтрокаДанных.Адресат);
		СтрокаДанных.Представление = ПредставлениеАдресата.Представление;
		СтрокаДанных.Контакт = ПредставлениеАдресата.Контакт;
		СтрокаДанных.Адрес = АдресИнфо.Адрес;
		СтрокаДанных.Внешний = ПредставлениеАдресата.Внешний;
		СтрокаДанных.ВидМаршрутизации = ПредставлениеАдресата.ВидМаршрутизации;
	Иначе
		СтрокаДанных.Представление = НовыйТекст;
		СтрокаДанных.Внешний = Истина;
		СтрокаДанных.ВидМаршрутизации = ПредопределенноеЗначение("Перечисление.ВидыМаршрутизацииПисем.Внешняя");
	КонецЕсли;
	
	Множ_ОбновитьНомерКартинкиАдресата(СтрокаДанных, ВсегоАдресатов);
	
	СтрокаДанных.РедактированиеЗавершено = Истина;
	
КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
Функция Множ_ПолучитьКартинкуАдресата(Контакт, Адрес, Знач ВсегоАдресатов, Отсутствует) 
	
	ЭтоВебКлиент = ОбщегоНазначенияКлиентСервер.ЭтоВебКлиент();
	Если ЭтоВебКлиент Тогда
		ВсегоАдресатов = 100; // чтобы не было картинок
	КонецЕсли;
	
	ДанныеДляНомераКартинки = Множ_ДанныеДляНомераКартинки(Контакт);
	
	Представление = СтрШаблон("%1 <%2>", Строка(Контакт), Адрес);
	
	Адресат = ВстроеннаяПочтаСерверПовтИсп.ПолучитьПочтовогоАдресата(Адрес, Представление);
	СтруктураАдресата = ВстроеннаяПочтаСервер.ПолучитьПредставлениеИКонтактАдресата(Адресат);
	
	НомерКартинки = Множ_НомерКартинкиАдресата(
		СтруктураАдресата.Внешний,
		ДанныеДляНомераКартинки.ОписаниеОтсутствия);
		
	Картинка = Неопределено;
	
	Если НомерКартинки = 3 Или НомерКартинки = 4 Тогда // отсутствие
		Отсутствует = Истина;
	Иначе
		Отсутствует = Ложь;
	КонецЕсли;
	
	Если (НомерКартинки = 0 Или НомерКартинки = 1 Или НомерКартинки = 3)
		И ВсегоАдресатов <= 5 
		И ДанныеДляНомераКартинки.Картинка <> Неопределено Тогда

		Картинка = ДанныеДляНомераКартинки.Картинка;
		
	Иначе
		
		Картинка = БиблиотекаКартинок["МК_Адресаты_" + НомерКартинки];

	КонецЕсли;
	
	Возврат Картинка;
		
КонецФункции

&НаСервереБезКонтекста
Функция Множ_ДанныеДляНомераКартинки(Получатель)
	
	ДанныеДляНомераКартинки = Новый Структура("ОписаниеОтсутствия, Картинка");
	
	ДанныеДляНомераКартинки.ОписаниеОтсутствия =
		Отсутствия.ПолучитьОписаниеТекущегоОтсутствияСотрудника(Получатель);
	
	ДанныеДляНомераКартинки.Картинка = Неопределено;
	ДвоичныеДанныеФото = Неопределено;
	
	Если ЗначениеЗаполнено(Получатель) Тогда
		ДвоичныеДанныеФото = РаботаСФотографиями.ПолучитьДвоичныеДанныеФото(Получатель);
	КонецЕсли;
	
	Если ДвоичныеДанныеФото <> Неопределено Тогда
		ДанныеДляНомераКартинки.Картинка = Новый Картинка(ДвоичныеДанныеФото); 
	КонецЕсли;
	
	Возврат ДанныеДляНомераКартинки;
	
КонецФункции


&НаКлиентеНаСервереБезКонтекста
Процедура Множ_ПеренестиВПолучатели(Форма)
	
	Получатели = Форма.Получатели;
	
	Получатели.Очистить();
	
	Для Каждого Стр Из Форма.ПолучателиПисьмаМножественныйВвод Цикл
		НовСтр = Получатели.Добавить();
		ЗаполнитьЗначенияСвойств(НовСтр, Стр);
		НовСтр.ТипАдреса = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.Кому");
	КонецЦикла;

	Для Каждого Стр Из Форма.ПолучателиКопийМножественныйВвод Цикл
		НовСтр = Получатели.Добавить();
		ЗаполнитьЗначенияСвойств(НовСтр, Стр);
		НовСтр.ТипАдреса = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.Копия");
	КонецЦикла;

	Для Каждого Стр Из Форма.ПолучателиСкрытойКопииМножественныйВвод Цикл
		НовСтр = Получатели.Добавить();
		ЗаполнитьЗначенияСвойств(НовСтр, Стр);
		НовСтр.ТипАдреса = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.СкрытаяКопия");
	КонецЦикла;

	Для Каждого Стр Из Форма.ПолучателиОтветаМножественныйВвод Цикл
		НовСтр = Получатели.Добавить();
		ЗаполнитьЗначенияСвойств(НовСтр, Стр);
		НовСтр.ТипАдреса = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.ОбратныйАдрес");
	КонецЦикла;
	
КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
Процедура Множ_ПеренестиИзПолучатели(Форма)
	
	Форма.ПолучателиПисьмаМножественныйВвод.Очистить();
	Форма.ПолучателиКопийМножественныйВвод.Очистить();
	Форма.ПолучателиСкрытойКопииМножественныйВвод.Очистить();
	Форма.ПолучателиОтветаМножественныйВвод.Очистить();
	
	ВсегоАдресатов = Форма.Получатели.Количество();
	
	Для Каждого Стр Из Форма.Получатели Цикл
		
		НовСтр = Неопределено;
		
		Если Стр.ТипАдреса = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.Кому") Тогда
			НовСтр = Форма.ПолучателиПисьмаМножественныйВвод.Добавить();
		ИначеЕсли Стр.ТипАдреса = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.Копия") Тогда
			НовСтр = Форма.ПолучателиКопийМножественныйВвод.Добавить();
		ИначеЕсли Стр.ТипАдреса = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.СкрытаяКопия") Тогда
			НовСтр = Форма.ПолучателиСкрытойКопииМножественныйВвод.Добавить();
			Форма.Элементы.ГруппаСкрытаяКопия.Видимость = Истина;
			Форма.Элементы.СкрытаяКопия.Видимость = Ложь;
		ИначеЕсли Стр.ТипАдреса = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.ОбратныйАдрес") Тогда
			НовСтр = Форма.ПолучателиОтветаМножественныйВвод.Добавить();
		КонецЕсли;
		
		ЗаполнитьЗначенияСвойств(НовСтр, Стр);

		Попытка
			НовСтр.Картинка = Множ_ПолучитьКартинкуАдресата(НовСтр.Контакт, НовСтр.Адрес, ВсегоАдресатов, НовСтр.Отсутствует);
		Исключение 
			// не бросаем исключение
		КонецПопытки;
		
	КонецЦикла;
	
КонецПроцедуры


	ВремяВыбораТипаАдресата = ТекущаяУниверсальнаяДатаВМиллисекундах();
	
	Если ПисьмоОтправлено Тогда
		СтандартнаяОбработка = Ложь;
		Возврат;
	КонецЕсли;
	
	ТипПолучателя = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.Копия");
	
	Если Элемент.Имя = "ПолучателиПисьмаМножественныйВвод" Тогда
		ТипПолучателя = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.Кому");
	ИначеЕсли Элемент.Имя = "ПолучателиКопийМножественныйВвод" Тогда
		ТипПолучателя = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.Копия");
	ИначеЕсли Элемент.Имя = "ПолучателиСкрытойКопииМножественныйВвод" Тогда
		ТипПолучателя = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.СкрытаяКопия");
	ИначеЕсли Элемент.Имя = "ПолучателиОтветаМножественныйВвод" Тогда
		ТипПолучателя = ПредопределенноеЗначение("Перечисление.ТипыАдресатов.ОбратныйАдрес");
	КонецЕсли;	
	
	Если ТипЗнч(ВыбранноеЗначение) = Тип("Структура") Тогда
		
		Если ЗначениеЗаполнено(ВыбранноеЗначение.Адресат) 
			И ТипЗнч(ВыбранноеЗначение.Адресат) <> Тип("СправочникСсылка.АдресатыПочтовыхСообщений") Тогда
			
			// выбрана группа
			
			АдресатыГруппы = Новый Массив;
			ИспользованныеАдреса = Новый Соответствие;
			ВстроеннаяПочтаСервер.РазвернутьГруппуВАдресаты(ВыбранноеЗначение.Адресат, АдресатыГруппы, ИспользованныеАдреса);
			
			СтандартнаяОбработка = Ложь;
			
			ДобавитьВсехНаСервереАвтоподборГруппы(АдресатыГруппы, ТипПолучателя);

			Возврат;
			
		КонецЕсли;	
		
		ТаблицаАдресов = Множ_ПолучитьТаблицуАдресатовПоТипу(ТипПолучателя);
		Множ_ДобавитьНовыйКонтакт(ТаблицаАдресов, ВыбранноеЗначение);
	
		СтандартнаяОбработка = Ложь;
	
		Модифицированность = Истина;
		
		ВремяОкончанияРедактированияПолучателей = ТекущаяДата();
		
	КонецЕсли;
	
	ВыбранноеЗначение = "";
	
КонецПроцедуры

&НаСервере
Процедура ДобавитьВсехНаСервереАвтоподборГруппы(АдресатыГруппы, ТипПолучателя)

	СоответствиеАдресатов = 
		ВстроеннаяПочтаСервер.ПолучитьСоответствиеАдресатовПоАдресуИКонтакту(АдресатыГруппы);
	
	ТаблицаАдресов = Множ_ПолучитьТаблицуАдресатовПоТипуСервер(ТипПолучателя); 
	
	ВсегоАдресатов = АдресатыГруппы.Количество();
	
	Для Каждого ВыбранноеЗначениеГруппы Из АдресатыГруппы Цикл
		
		АдресатСтруктура = СоответствиеАдресатов[НРег(ВыбранноеЗначениеГруппы.Адрес)];
		Если АдресатСтруктура <> Неопределено Тогда
			
			Адресат = АдресатСтруктура.Адресат;
			ВыбранноеЗначениеГруппы.Вставить("Адресат", Адресат);
			
			Внешний = АдресатСтруктура.Внешний;
			ВыбранноеЗначениеГруппы.Вставить("Внешний", Внешний);
			
		КонецЕсли;	
	
		Множ_ДобавитьНовыйКонтактСервер(ТаблицаАдресов, ВыбранноеЗначениеГруппы, ВсегоАдресатов);
		
	КонецЦикла;	
	
	

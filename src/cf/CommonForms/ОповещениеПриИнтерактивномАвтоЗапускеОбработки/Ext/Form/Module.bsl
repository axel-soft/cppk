	#Область СлужебныеПроцедурыИФункции_НагрузочноеТестирование
		
		&НаКлиенте
		Функция НТ_НеЗапускать() Экспорт
			
			НеЗапускать(Неопределено); //@skip-check invocation-form-event-handler
			Возврат Истина;
			
		КонецФункции
		
	#КонецОбласти

#КонецОбласти

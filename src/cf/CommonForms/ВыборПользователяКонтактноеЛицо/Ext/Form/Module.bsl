		КонецЕсли;
		Элементы.ГруппировкиМК.Заголовок = СтрШаблон("Группировка: %1", Строка(ТекущиеДанные.Наименование));
		Элементы.ГруппировкиМК.Скрыть();
	#КонецЕсли

